{
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Basic Options */
    "incremental": true,
    "target": "es5",
    "module": "system",
    "lib": ["es5", "es6", "es2015.promise", "es2016.array.include"],
    "allowJs": false,
    "checkJs": false,
    "jsx": "react",
    "declaration": true,
    "outFile": "./dist/build.js",
    "rootDir": "./src",
    "removeComments": true,
    "noEmit": true,
    "downlevelIteration": true,
    "sourceMap": true,

    /* Strict Type-Checking Options */
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": true,

    /* Additional Checks */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      // Укажите сопоставление маршрутов для вычисления по сравнению с параметром baseUrl.
      //"jquery": ["node_modules/jquery/dist/jquery"] // Путь относительно "baseUrl".
//      "@constants": ["src/constants/*", "src/constants"],
//      "@hooks/*": ["src/hooks/*"],
//      "@components": ["src/components/*", "src/components"],
//      "~types/*": ["src/types/*"]
    },
    //"types": ["node"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    /* Experimental Options */
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    //"/node_modules/@types/jest/index.d.ts"
  ]
}
